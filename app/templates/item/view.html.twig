{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.item_details'|trans({'%id%': item.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.item_details'|trans({'%id%': item.id|default('')}) }}</h1>
    {% if item is defined and item|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ item.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ item.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ item.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  item.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('item_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}